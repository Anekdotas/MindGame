<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainMenuActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/test_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center"
            android:background="@color/secondary_dark_blue_background"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/mainmenu_activity_title"
                android:textSize="30sp"
                android:textStyle="bold"
                android:autoSizeTextType="uniform"
                android:autoSizeMaxTextSize="190sp"
                android:autoSizeMinTextSize="30sp"
                android:autoSizeStepGranularity="5sp"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="center"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/play_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="10">

                    <ImageView
                        android:src="@drawable/ic_vector_play"
                        style="@style/MainMenuIcons"
                        tools:ignore="ContentDescription"/>
                    <TextView
                        android:text="@string/play"
                        style="@style/MainMenuButtons"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="70sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="5sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/shop_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="10">

                    <ImageView
                        android:src="@drawable/ic_shop"
                        style="@style/MainMenuIcons"
                        tools:ignore="ContentDescription"/>
                    <TextView
                        android:text="@string/mainmenu_activity_shop"
                        style="@style/MainMenuButtons"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="70sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="5sp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:gravity="center"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <LinearLayout
                    android:id="@+id/personalStatistics_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="10">
                    <ImageView
                        android:src="@drawable/ic_profile"
                        style="@style/MainMenuIcons"
                        tools:ignore="ContentDescription"/>
                    <TextView
                        android:text="@string/mainmenu_activity_profile"
                        style="@style/MainMenuButtons"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="70sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="5sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/exit_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="10">

                    <ImageView
                        android:src="@drawable/ic_vector_exit"
                        style="@style/MainMenuIcons"
                        tools:ignore="ContentDescription"/>
                    <TextView
                        android:text="@string/mainmenu_activity_exit"
                        style="@style/MainMenuButtons"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMaxTextSize="70sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="5sp"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_levelCreator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lvl_creator_title"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="@drawable/custom_button"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>